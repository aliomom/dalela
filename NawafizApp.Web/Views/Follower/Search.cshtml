@model NawafizApp.Services.Dtos.FollowerDto
@using NawafizApp.Web.Models;

<div class="portlet box yellow">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i>المتابعات
        </div>
    </div>
    <div class="portlet-body">
        @using (Ajax.BeginForm("getAllFollwer", "Follower", new { filter = Model }, new AjaxOptions { UpdateTargetId = "table", InsertionMode = InsertionMode.Replace, HttpMethod = "get", LoadingElementId = "wait", LoadingElementDuration = 9000 }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
