@model IEnumerable<NawafizApp.Services.Dtos.MainCategoryOffersDto>

@{ Layout = null;}
<link href="~/Content/jquery-confirm.min.css" rel="stylesheet" />
<style>
    td {
        text-align: center !important;
        vertical-align:middle !important;
    }

    th {
        text-align: center !important;
        background-color: #f5f3a7;
    }

    .table > tbody > tr > td, .table > tbody > tr > th, .table > tfoot > tr > td, .table > tfoot > tr > th, .table > thead > tr > td, .table > thead > tr > th {
        padding: 3px;
        line-height: 1.42857;
        vertical-align: top;
        border-top: 1px solid #e7ecf1;
    }

    .table td, .table th {
        font-size: 12px;
    }
</style>
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th> تسلسل </th>
                <th> الاسم العربي</th>
                <th> الاسم الانكليزي</th>
                <th> الاسم الفرنسي</th>
                <th> الاسم الفارسي</th>
                <th> الاسم الروسي</th>


                <th style="text-align:center">إدارة</th>



            </tr>
        </thead>
        <tbody>
         
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.num)
                    </td>

                    <td>
                        @if (item.ArabicName.IsEmpty())
                        {
                            <b>لا يوجد</b>
                        }
                        @Html.DisplayFor(modelItem => item.ArabicName)
                    </td>

                    <td>
                        @if (item.EngName.IsEmpty())
                        {
                            <b>لا يوجد</b>
                        }
                        @Html.DisplayFor(modelItem => item.EngName)
                    </td>

                    <td>
                        @if (item.FrenchName.IsEmpty())
                        {
                            <b>لا يوجد</b>
                        }
                        @Html.DisplayFor(modelItem => item.FrenchName)
                    </td>

                    <td>
                        @if (item.PersianName.IsEmpty())
                        {
                            <b>لا يوجد</b>
                        }
                        @Html.DisplayFor(modelItem => item.PersianName)
                    </td>

                    <td>
                        @if (item.RussName.IsEmpty())
                        {
                            <b>لا يوجد</b>
                        }
                        @Html.DisplayFor(modelItem => item.RussName)
                    </td>
                    <td>
                        @Html.ActionLink("حذف", "deletemaincatOffer", new { id = item.Id }, new { @class = "linkDel" }) &nbsp;&nbsp;&nbsp;
                        @Html.ActionLink("تعديل", "Edit", new { id = item.Id })
                    </td>

                </tr>
             
            }
        </tbody>
    </table>
</div>

<script src="~/Scripts/jquery-confirm.min.js"></script>
<script>
    $('.linkDel').confirm({
        title: 'تأكيد الحذف !',

        content: 'هل تريد بالتأكيد حذف هذه المحافظة ؟',


        buttons: {
            نعم: function () {
                location.href = this.$target.attr('href');
            },
            إلغاء: function () {

            }


        }
    });
    $('a.twitter').confirm({
        content: "...",
    });
    $('a.twitter').confirm({
        buttons: {
            نعم: function () {
                location.href = this.$target.attr('href');
            }
        }
    });
    $(".jconfirm-content-pane").removeClass("no-scroll");
</script>
