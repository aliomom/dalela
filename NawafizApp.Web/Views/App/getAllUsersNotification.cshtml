@model IEnumerable<NawafizApp.Services.Dtos.NotificationDto>

@{
    Layout = null;
}
<style>
    td {
        text-align: center !important;
    }

    th {
        text-align: center !important;
        background-color: #f5f3a7;
    }

    .table > tbody > tr > td, .table > tbody > tr > th, .table > tfoot > tr > td, .table > tfoot > tr > th, .table > thead > tr > td, .table > thead > tr > th {
        padding: 3px;
        line-height: 1.42857;
        vertical-align: top;
        border-top: 1px solid #e7ecf1;
    }

    .table td, .table th {
        font-size: 12px;
    }
</style>
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th> # </th>
                <th> العنوان</th>
                <th> التفاصيل</th>
                <th> تاريخ الاشعار </th>
                <th>  وقت الاشعار</th>
            </tr>
        </thead>
        <tbody>
            @{ int i = 1; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @i
                    </td>
                    <td>
                        @if (item.title.IsEmpty())
                        {
                            <b>لا يوجد</b>
                        }
                        @Html.DisplayFor(modelItem => item.title)
                    </td>
                    <td>
                        @if (item.content.IsEmpty())
                        {
                            <b>لا يوجد</b>
                        }
                        @Html.DisplayFor(modelItem => item.content)
                    </td>
                    <td>
                        @if (item.strdate.IsEmpty())
                        {
                            <b>لا يوجد</b>
                        }
                        @Html.DisplayFor(modelItem => item.strdate)
                    </td>

                    <td>
                        @if (item.strtime.IsEmpty())
                        {
                            <b>لا يوجد</b>
                        }
                        @Html.DisplayFor(modelItem => item.strtime)
                    </td>                 
                </tr>
                i++;
            }
        </tbody>
    </table>
</div>
