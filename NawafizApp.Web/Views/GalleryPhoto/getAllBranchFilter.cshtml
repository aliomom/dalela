@model IEnumerable<NawafizApp.Services.Dtos.BranchDto>

@{
    Layout = null;
}
<style>
    td {
        text-align: center !important;
    }

    th {
        text-align: center !important;
        background-color: #f5f3a7;
    }

    .table > tbody > tr > td, .table > tbody > tr > th, .table > tfoot > tr > td, .table > tfoot > tr > th, .table > thead > tr > td, .table > thead > tr > th {
        padding: 3px;
        line-height: 1.42857;
        vertical-align: top;
        border-top: 1px solid #e7ecf1;
    }

    .table td, .table th {
        font-size: 12px;
    }
</style>
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th> # </th>     
                <th> الاسم </th>
                <th>إضافة الى معرض الصور</th>
                <th> معرض الصور</th>
            </tr>
        </thead>
        <tbody>
            @{ int i = 1; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @i
                    </td>                  
                    <td>
                        @if (item.branchArabicName.IsEmpty())
                        {
                            <b>لا يوجد</b>
                        }
                        @Html.DisplayFor(modelItem => item.branchArabicName)
                    </td>
                    <td>
                        <a href="@Url.Action("AddGalleryPhoto","GalleryPhoto",new {bid=item.Id })"><img src="~/Images/plus.png" height="25" width="25" /></a>
                    </td>
                    <td>
                        <a href="@Url.Action("getGalleryPhotoForBranch","GalleryPhoto",new {bid=item.Id,bname=item.branchArabicName })"><img src="~/Images/info3.png" height="25" width="25" /></a>
                    </td>


                

                </tr>
                i++;
            }
        </tbody>
    </table>
</div>
