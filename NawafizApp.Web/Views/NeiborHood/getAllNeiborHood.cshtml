@model IEnumerable<NawafizApp.Services.Dtos.NeihborhoodDto>
@{ Layout = null;}
<link href="~/Content/jquery-confirm.min.css" rel="stylesheet" />
<style>
    td {
        text-align: center !important;
    }

    th {
        text-align: center !important;
        background-color: #f5f3a7;
    }

    .table > tbody > tr > td, .table > tbody > tr > th, .table > tfoot > tr > td, .table > tfoot > tr > th, .table > thead > tr > td, .table > thead > tr > th {
        padding: 3px;
        line-height: 1.42857;
        vertical-align: top;
        border-top: 1px solid #e7ecf1;
    }

    .table td, .table th {
        font-size: 12px;
    }
</style>

<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th> تسلسل </th>
                <th>المحافظة</th>
                <th>المنطقة</th>
                <th> الحي بالعربي</th>
                <th> الحي بالانكليزي</th>
                <th> الحي بالفرنسي</th>
                <th> الحي بالفارسي</th>
                <th> الحي بالروسي</th>                             
                <th>إدارة</th>

            </tr>
        </thead>
        <tbody>
            @{ int i = 1; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @i
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.statename)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.regionAName)
                    </td>
                    <td>
                        @if (item.ArabicName.IsEmpty())
                        {
                            <b>لا يوجد</b>
                        }
                        @Html.DisplayFor(modelItem => item.ArabicName)
                    </td>
                    <td>
                        @if (item.EngName.IsEmpty())
                        {
                            <b>لا يوجد</b>
                        }
                        @Html.DisplayFor(modelItem => item.EngName)
                    </td>
                    <td>
                        @if (item.FrenchName.IsEmpty())
                        {
                            <b>لا يوجد</b>
                        }
                        @Html.DisplayFor(modelItem => item.FrenchName)
                    </td>
                    <td>
                        @if (item.PersianName.IsEmpty())
                        {
                            <b>لا يوجد</b>
                        }
                        @Html.DisplayFor(modelItem => item.PersianName)
                    </td>
                    <td>
                        @if (item.RussName.IsEmpty())
                        {
                            <b>لا يوجد</b>
                        }
                        @Html.DisplayFor(modelItem => item.RussName)
                    </td>
                 
                  
                    <td>


                        @Html.ActionLink("حذف", "deleteNeiborHood", new { id = item.Id }, new { @class = "linkDel" })&nbsp;&nbsp;&nbsp;
                        @Html.ActionLink("تعديل", "Edite", new { id = item.Id })
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
</div>

<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script src="~/Scripts/jquery-confirm.min.js"></script>
<script>
    $('.linkDel').confirm({
        title: 'تأكيد الحذف !',

        content: 'هل تريد بالتأكيد حذف هذا الحي  ؟',


        buttons: {
            نعم: function () {
                location.href = this.$target.attr('href');
            },
            إلغاء: function () {

            }


        }
    });
    $('a.twitter').confirm({
        content: "...",
    });
    $('a.twitter').confirm({
        buttons: {
            نعم: function () {
                location.href = this.$target.attr('href');
            }
        }
    });
    $(".jconfirm-content-pane").removeClass("no-scroll");
</script>